{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "services/email/mail/templates/*",
                "watchAssets": true
            },
            "./services/pdf-generation/templates/**/*"
        ],
        "watchAssets": true
    }
}
